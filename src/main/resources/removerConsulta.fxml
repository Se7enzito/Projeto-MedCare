<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane prefHeight="855" prefWidth="520"
           xmlns="http://javafx.com/javafx/8"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.projeto.API.fxml.remover.RemoverConsultaController"
           style="-fx-background-color: #F2F3F5;">

    <children>
        <VBox alignment="TOP_CENTER" maxWidth="520"
              style="-fx-background-color: white; -fx-background-radius: 20;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 20, 0, 0, 4);">

            <!-- CABEÃ‡ALHO -->
            <HBox alignment="CENTER_LEFT" prefHeight="80" spacing="12"
                  style="-fx-background-color: #D32F2F; -fx-background-radius: 20 20 0 0;">
                <padding><Insets left="20" right="20"/></padding>

                <Label text="ðŸ—‘" style="-fx-font-size: 26; -fx-text-fill: white;"/>
                <Label text="Remover Consulta"
                       style="-fx-font-size: 24; -fx-text-fill: white; -fx-font-weight: bold;"/>
            </HBox>

            <!-- LISTA -->
            <VBox spacing="10">
                <padding><Insets top="20" left="20" right="20" bottom="20"/></padding>

                <ListView fx:id="listaConsultas" prefHeight="600"/>
            </VBox>

            <!-- BOTÃ•ES -->
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <padding><Insets left="20" right="20" bottom="20" top="10"/></padding>

                <Button text="Voltar"
                        onAction="#voltar"
                        style="-fx-background-color: #B0B0B0; -fx-text-fill: white;
                               -fx-font-size: 14; -fx-background-radius: 10;"
                        prefHeight="40"/>

                <Button text="Remover"
                        onAction="#removerSelecionada"
                        style="-fx-background-color: #D32F2F; -fx-text-fill: white;
                               -fx-font-size: 14; -fx-background-radius: 10;"
                        prefHeight="40"/>
            </HBox>

        </VBox>
    </children>

</StackPane>
