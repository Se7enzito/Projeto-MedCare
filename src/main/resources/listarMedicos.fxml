<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane prefHeight="855" prefWidth="520"
           xmlns="http://javafx.com/javafx/8"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.projeto.API.fxml.listar.ListarMedicoController"
           style="-fx-background-color: #F2F3F5;">

    <children>
        <VBox alignment="TOP_CENTER" maxWidth="520"
              style="-fx-background-color: white; -fx-background-radius: 20;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 20, 0, 0, 4);">

            <!-- CABEÃ‡ALHO -->
            <HBox alignment="CENTER_LEFT" prefHeight="80" spacing="12"
                  style="-fx-background-color: #1976FF; -fx-background-radius: 20 20 0 0;">
                <padding><Insets left="20" right="20"/></padding>

                <Label text="ðŸ‘¨â€âš•ï¸" style="-fx-font-size: 26; -fx-text-fill: white;"/>
                <Label text="Lista de MÃ©dicos"
                       style="-fx-font-size: 24; -fx-text-fill: white; -fx-font-weight: bold;"/>
            </HBox>

            <!-- BUSCA -->
            <VBox spacing="10" style="-fx-padding: 20;">
                <HBox spacing="10">
                    <TextField fx:id="inputBusca"
                               promptText="Buscar por nome ou CRM..."
                               style="-fx-background-radius: 10; -fx-font-size: 14;"/>
                </HBox>
            </VBox>

            <!-- TABELA -->
            <VBox spacing="10">
                <padding><Insets left="20" right="20" bottom="20"/></padding>

                <TableView fx:id="tableMedicos" prefHeight="600">
                    <columns>

                        <TableColumn fx:id="colNome" text="Nome" prefWidth="200"/>
                        <TableColumn fx:id="colCrm" text="CRM" prefWidth="100"/>
                        <TableColumn fx:id="colTelefone" text="Telefone" prefWidth="150"/>

