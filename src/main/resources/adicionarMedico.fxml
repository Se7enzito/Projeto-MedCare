<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<StackPane prefHeight="855" prefWidth="520"
           style="-fx-background-color: #F2F3F5;"
           xmlns="http://javafx.com/javafx/8"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.projeto.API.fxml.cadastro.CadastroMedicoController">

    <children>
        <VBox alignment="TOP_CENTER" maxWidth="520" spacing="0"
              style="-fx-background-color: white; -fx-background-radius: 20;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 20, 0, 0, 4);">

            <!-- CABEÃ‡ALHO -->
            <HBox alignment="CENTER_LEFT" prefHeight="80" spacing="12"
                  style="-fx-background-color: #1976FF; -fx-background-radius: 20 20 0 0;">
                <padding>
                    <Insets left="20" right="20"/>
                </padding>

                <Label text="ðŸ¥" style="-fx-font-size: 26; -fx-text-fill: white;"/>
                <Label text="Cadastrar MÃ©dico"
                       style="-fx-font-size: 24; -fx-text-fill: white; -fx-font-weight: bold;"/>
            </HBox>

            <!-- FORM -->
            <VBox spacing="18">
                <padding>
                    <Insets top="30" bottom="30" left="30" right="30"/>
                </padding>

                <!-- Nome -->
                <VBox spacing="5">
                    <Label text="Nome Completo" style="-fx-font-weight: bold; -fx-font-size: 14;"/>
                    <TextField fx:id="inputNome" promptText="Digite o nome completo"/>
                </VBox>

                <!-- CRM -->
                <VBox spacing="5">
                    <Label text="CRM" style="-fx-font-weight: bold; -fx-font-size: 14;"/>
                    <TextField fx:id="inputCrm" promptText="000000"/>
                </VBox>

                <!-- Telefone -->
                <VBox spacing="5">
                    <Label text="Telefone" style="-fx-font-weight: bold; -fx-font-size: 14;"/>
                    <TextField fx:id="inputTelefone" promptText="(00) 00000-0000"/>
                </VBox>

                <!-- Email -->
                <VBox spacing="5">
                    <Label text="Email" style="-fx-font-weight: bold; -fx-font-size: 14;"/>
                    <TextField fx:id="inputEmail" promptText="email@exemplo.com"/>
                </VBox>

                <!-- Especialidade -->
                <VBox spacing="5">
                    <Label text="Especialidade" style="-fx-font-weight: bold; -fx-font-size: 14;"/>
                    <ChoiceBox fx:id="choiceEspecialidade"
                               prefWidth="300"
                               style="
                                -fx-background-color: white;
                                -fx-background-radius: 8;
                                -fx-border-color: #D0D0D0;
                                -fx-border-radius: 8;
                                -fx-border-width: 1.5;
                                -fx-padding: 5 10;
                                -fx-font-size: 14;
                                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 10, 0, 0, 2);
                            "/>
                </VBox>

            </VBox>

            <!-- BOTÃ•ES -->
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <padding>
                    <Insets top="10" bottom="20" left="20" right="20"/>
                </padding>

                <Button text="Voltar"
                        onAction="#voltar"
                        prefHeight="40"
                        style="-fx-background-color: #B0B0B0; -fx-text-fill: white;
                               -fx-font-size: 14; -fx-background-radius: 10;"/>

                <Button text="Cadastrar"
                        onAction="#cadastrarMedico"
                        prefHeight="40"
                        style="-fx-background-color: #1976FF; -fx-text-fill: white;
                               -fx-font-size: 14; -fx-background-radius: 10;"/>
            </HBox>
        </VBox>
    </children>
</StackPane>
