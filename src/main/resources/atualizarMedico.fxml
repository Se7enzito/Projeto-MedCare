<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane prefHeight="855" prefWidth="520"
           xmlns="http://javafx.com/javafx/8"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.projeto.API.fxml.atualizar.AtualizarMedicoController"
           style="-fx-background-color: #F2F3F5;">

    <children>
        <VBox alignment="TOP_CENTER" maxWidth="520"
              style="-fx-background-color: white; -fx-background-radius: 20;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 20, 0, 0, 4);">

            <!-- CABEÇALHO -->
            <HBox alignment="CENTER_LEFT" prefHeight="80" spacing="12"
                  style="-fx-background-color: #1976FF; -fx-background-radius: 20 20 0 0;">
                <padding><Insets left="20" right="20"/></padding>
                <Label text="✏" style="-fx-font-size: 26; -fx-text-fill: white;"/>
                <Label text="Atualizar Médico"
                       style="-fx-font-size: 24; -fx-text-fill: white; -fx-font-weight: bold;"/>
            </HBox>

            <!-- FORM -->
            <VBox spacing="18">
                <padding><Insets top="30" left="30" right="30" bottom="30"/></padding>

                <VBox spacing="5">
                    <Label text="Selecione o Médico" style="-fx-font-weight: bold;"/>
                    <ChoiceBox fx:id="choiceMedico" prefWidth="300"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Nome" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="inputNome" promptText="Nome completo"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="CRM" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="inputCrm" promptText="Número CRM"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Telefone" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="inputTelefone" promptText="(00) 00000-0000"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Email" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="inputEmail" promptText="email@dominio.com"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="ID da Especialidade" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="inputEspecialidadeId" promptText="Ex: 1"/>
                </VBox>
            </VBox>

            <!-- BOTÕES -->
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <padding><Insets left="20" right="20" bottom="20" top="10"/></padding>

                <Button text="Voltar"
                        onAction="#voltar"
                        style="-fx-background-color: #B0B0B0; -fx-text-fill: white;
                               -fx-font-size: 14; -fx-background-radius: 10;"
                        prefHeight="40"/>

                <Button text="Salvar Alterações"
                        onAction="#atualizarMedico"
                        style="-fx-background-color: #1976FF; -fx-text-fill: white;
                               -fx-font-size: 14; -fx-background-radius: 10;"
                        prefHeight="40"/>
            </HBox>

        </VBox>
    </children>
</StackPane>
