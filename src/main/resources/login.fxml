         </children>
                      </VBox>
      
                      <!-- BOTÃƒO ENTRAR -->
                      <Button onAction="#login" prefHeight="45" prefWidth="200" style="-fx-background-color: linear-gradient(to right, #1976FF, #4D9BFF);                                -fx-text-fill: white;                                -fx-background-radius: 12;                                -fx-font-size: 18;                                -fx-font-weight: bold;" text="Entrar" />
