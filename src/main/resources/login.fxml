<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="500" prefWidth="420" style="-fx-background-color: #E9ECF1;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.projeto.API.fxml.LoginController">

    <children>

        <VBox alignment="TOP_CENTER" maxWidth="420" spacing="0" style="-fx-background-color: white;                      -fx-background-radius: 22;                      -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.18), 30, 0, 0, 6);">
   <children>
   
               <!-- CABEÃ‡ALHO -->
               <HBox alignment="CENTER_LEFT" prefHeight="70.0" prefWidth="420.0" spacing="14" style="-fx-background-color: linear-gradient(to right, #1976FF, #4D9BFF);                          -fx-background-radius: 22 22 0 0;">
                   <padding>
                  <Insets left="25" right="25" />
               </padding>
      <children>
      
                      <Label style="-fx-font-size: 32; -fx-text-fill: white;" text="ðŸ”" />
