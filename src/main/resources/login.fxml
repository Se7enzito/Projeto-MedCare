      </children>
               </HBox>
   
               <!-- CORPO DO LOGIN -->
               <VBox alignment="CENTER" spacing="20" style="-fx-padding: 35 35 40 35;">
      <children>
                  <ImageView fitHeight="253.0" fitWidth="220.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@logo.jpeg" />
                     </image>
                  </ImageView>
      
                      <!-- EMAIL -->
                      <VBox spacing="6">
         <children>
                             <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Email" />
