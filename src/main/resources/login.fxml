<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="500" prefWidth="420"
           xmlns="http://javafx.com/javafx/8"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.projeto.API.fxml.LoginController"
           style="-fx-background-color: #E9ECF1;">

    <children>

        <VBox alignment="TOP_CENTER"
              maxWidth="420"
              spacing="0"
              style="-fx-background-color: white;
                     -fx-background-radius: 22;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.18), 30, 0, 0, 6);">

            <!-- CABEÃ‡ALHO -->
            <HBox alignment="CENTER_LEFT"
                  prefHeight="90"
                  spacing="14"
                  style="-fx-background-color: linear-gradient(to right, #1976FF, #4D9BFF);
                         -fx-background-radius: 22 22 0 0;">
                <padding><Insets left="25" right="25"/></padding>

                <Label text="ðŸ”" style="-fx-font-size: 32; -fx-text-fill: white;"/>
                <Label text="Login"
                       style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: white;"/>
            </HBox>

            <!-- CORPO DO LOGIN -->
            <VBox spacing="20" alignment="CENTER"
                  style="-fx-padding: 35 35 40 35;">

                <!-- EMAIL -->
                <VBox spacing="6">
                    <Label text="Email" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                    <TextField fx:id="inputEmail"
                               promptText="Digite seu e-mail"
                               style="-fx-background-radius: 12;
                                      -fx-padding: 10;
                                      -fx-font-size: 15;"/>
                </VBox>

                <!-- SENHA -->
                <VBox spacing="6">
                    <Label text="Senha" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                    <PasswordField fx:id="inputSenha"
                                   promptText="Digite sua senha"
                                   style="-fx-background-radius: 12;
                                          -fx-padding: 10;
                                          -fx-font-size: 15;"/>
                </VBox>

                <!-- BOTÃƒO ENTRAR -->
                <Button text="Entrar"
                        prefHeight="45" prefWidth="200"
                        onAction="#login"
                        style="-fx-background-color: linear-gradient(to right, #1976FF, #4D9BFF);
                               -fx-text-fill: white;
                               -fx-background-radius: 12;
                               -fx-font-size: 18;
                               -fx-font-weight: bold;"/>

            </VBox>
        </VBox>

    </children>

</StackPane>
